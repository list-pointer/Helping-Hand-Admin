<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5FF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/registration_top"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assistant Registration"
                android:textSize="30dp"
                android:textColor="#333333"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/registration_bottom"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_assistantContactNumber"
                android:text="Enter contact number"
                android:textSize="25dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_assistantContactNumber"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="25dp"
                android:textColor="#959595"
                android:background="@drawable/bg_et"
                android:layout_below="@+id/tv_assistantContactNumber"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:maxLength="10"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/getOTP_registerAssistantNumber"
                android:text="Get OTP"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:background="@drawable/button_style"
                android:elevation="0dp"
                android:layout_centerInParent="true"
                android:padding="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:onClick="getOTP_registerAssistantNumber"
                android:textColor="#333333"
                android:layout_below="@id/et_assistantContactNumber"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_otp_registerAssistantNumber"
                android:text="Enter OTP"
                android:textSize="25dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@+id/getOTP_registerAssistantNumber"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_otp_registerAssitantNumber"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="25dp"
                android:textColor="#959595"
                android:background="@drawable/bg_et"
                android:layout_below="@+id/tv_otp_registerAssistantNumber"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:maxLength="10"
                android:visibility="gone"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/assistantRegistrationLogin"
                android:text="Next"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:background="@drawable/button_style"
                android:elevation="0dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/et_otp_registerAssitantNumber"
                android:padding="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:onClick="login"
                android:textColor="#333333"
                android:visibility="gone"
                />

        </RelativeLayout>

    </LinearLayout>


</ScrollView>