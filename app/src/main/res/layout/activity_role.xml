<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="#F5F5FF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        tools:context=".RequestingHelp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/registration_top"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/applogo_64"
                android:id="@+id/logo"
                android:layout_marginRight="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Helping Hands"
                android:textSize="30dp"
                android:textColor="#333333"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/registration_center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            >
            <TextView
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PLEASE SELECT USER TYPE"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <Spinner
                android:layout_below="@+id/head"
                android:id="@+id/userType_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_et"
                android:padding="10dp"
                android:textColor="#959595"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/stationLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PLEASE SELECT STATION"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/userType_role"
                />
            <Spinner
                android:layout_below="@+id/stationLabel"
                android:id="@+id/stationAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_et"
                android:padding="10dp"
                android:textColor="#959595"
                android:textSize="25dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/registration_bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:id="@+id/role_rl_adminLogin"
                android:visibility="gone">

                <TextView
                    android:id="@+id/role_tv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ENTER YOUR CREDENTIALS"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    />
0
                <TextView
                    android:id="@+id/role_tv_loginID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login ID"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/role_tv_info"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/role_et_loginID"
                    android:singleLine="true"
                    android:textSize="25dp"
                    android:layout_below="@id/role_tv_loginID"
                    android:textColor="#959595"
                    android:background="@drawable/bg_et"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:id="@+id/role_tv_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_below="@id/role_et_loginID"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/role_et_password"
                    android:singleLine="true"
                    android:textSize="25dp"
                    android:textColor="#959595"
                    android:background="@drawable/bg_et"
                    android:layout_below="@id/role_tv_password"
                    android:inputType="textPassword"
                    android:ems="5"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/role_btn_adminLogin"
                    android:text="Login"
                    android:textSize="30dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_style"
                    android:elevation="0dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/role_et_password"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="adminLogin"
                    android:textColor="#333333"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/role_rl_staffLogin"
                android:visibility="visible">
                <TextView
                    android:id="@+id/role_tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter mobile number"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/role_et_phone"
                    android:singleLine="true"
                    android:textSize="25dp"
                    android:textColor="#959595"
                    android:background="@drawable/bg_et"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/role_tv_phone"
                    android:inputType="number"
                    android:maxLength="10"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/role_btn_getOtp"
                    android:text="Get OTP"
                    android:textSize="30dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_style"
                    android:elevation="0dp"
                    android:layout_centerHorizontal="true"
                    android:padding="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="getOTP"
                    android:textColor="#333333"
                    android:layout_below="@id/role_et_phone"
                    />
                <TextView
                    android:id="@+id/role_tv_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/role_btn_getOtp"
                    android:text="Enter OTP"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    />

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/role_pb_progressBar"
                    android:layout_below="@+id/role_tv_otp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/role_et_otp"
                    android:singleLine="true"
                    android:textSize="25dp"
                    android:textColor="#959595"
                    android:background="@drawable/bg_et"
                    android:padding="10dp"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/role_tv_otp"
                    android:layout_toRightOf="@+id/role_pb_progressBar"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/role_btn_staffLogin"
                    android:text="Login"
                    android:textSize="30dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_style"
                    android:elevation="0dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/role_et_otp"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="staffLogin"
                    android:textColor="#333333"
                    android:visibility="gone"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>